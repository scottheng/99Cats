<h1>
  Cat Info
</h1>

<table>
  <tr>
    <th>Name</<th>
    <th><%= @cat.name %></<th>
  <tr>
  <tr>
    <th>Age</<th>
    <th><%= @cat.age %></<th>
  <tr>
  <tr>
    <th>Sex</<th>
    <th><%= @cat.sex %></<th>
  <tr>
  <tr>
    <th>Color</<th>
    <th><%= @cat.color %></<th>
  <tr>
</table>

<h2>Description</h2>
<%= @cat.description %>

<table>
<p> Rental Schedule </p>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th> Status </th>
  </tr>

  <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
    <tr>
      <th><%= request.start_date %></th>
      <th><%= request.end_date %></th>
      <th><%= request.status %></th>
      <th>
      <% if request.status == "PENDING" %>
        <%= button_to "Approve", approve_cat_rental_request_url(request)  %>
        <%= button_to "Deny", deny_cat_rental_request_url(request) %>
      <% end %>
    </th>
    </tr>
  <% end %>
</table>
